---
import type { AuthorsEntry } from "@/types";
import CollectionLayout from "@components/authors/CollectionLayout.astro";
import { getEntries } from "@lib/contentParser";
import { getIndex } from "@lib/contentParser";
import { sortById } from "@lib/sortFunctions";

const authorIndex = await getIndex("authors") as AuthorsEntry;
const entries = await getEntries("authors", sortById) as AuthorsEntry[];
---

<CollectionLayout authorIndex={authorIndex} entries={entries} />
